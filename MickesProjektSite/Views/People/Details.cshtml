@model MickesProjektSite.Models.Person

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNr)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNr)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Projekt Titel
            </th>
            <th>
                Att göra
            </th>
            <th>
                Deadline
            </th>
        </tr>

        @foreach (var item in Model.ProjectDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Todo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Deadline)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PersonID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
